<Window x:Class="Quintessence.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" MinHeight="150" MinWidth="400" Style="{StaticResource WindowStyle}" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource TBStyle}" Text="{Binding Error}" Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" />
        <Button Command="{Binding Close}" Width="100" Grid.Row="1" Margin="0,0,0,5" BorderBrush="{x:Null}" Background="#FFEC4911" Foreground="#FFFFF9EF">Close</Button>
    </Grid>
</Window>
